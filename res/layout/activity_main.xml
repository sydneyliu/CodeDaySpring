<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.springcodeday2014.MainActivity$PlaceholderFragment" >

     <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/imgAngry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/angrywoman" />

    <Button
        android:id="@+id/eat"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgAngry"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
     />

    <Button
        android:id="@+id/boyfriend"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_above="@+id/eat"
        android:layout_alignLeft="@+id/eat"
        android:layout_marginBottom="18dp"
        android:background="@android:color/transparent"
     />

    <Button
        android:id="@+id/aiya"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_above="@+id/boyfriend"
        android:layout_alignLeft="@+id/boyfriend"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
	 />

    <Button
        android:id="@+id/stupid"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/aiya"
        android:layout_alignTop="@+id/imgAngry"
        android:background="@android:color/transparent"
     />
</RelativeLayout>